# ===========================================
# EduckPro Backend - Production Environment
# ===========================================
# Copy this file to .env and fill in your values

# Database (PostgreSQL)
DATABASE_URL="postgresql://educkpro_user:your_password@localhost:5432/educkpro_db"

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Server Configuration
PORT=4000
NODE_ENV=production

# CORS - Allowed Origins (comma-separated)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Email Configuration (SMTP)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="EduckPro <noreply@yourdomain.com>"

# Push Notifications VAPID Keys
# Generate with: node generate-vapid-keys.js
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# ===========================================
# Optional: External Services
# ===========================================

# Cloudinary (for file uploads - optional)
# CLOUDINARY_CLOUD_NAME="your-cloud-name"
# CLOUDINARY_API_KEY="your-api-key"
# CLOUDINARY_API_SECRET="your-api-secret"

# Redis (for session/cache - optional)
# REDIS_URL="redis://localhost:6379"
